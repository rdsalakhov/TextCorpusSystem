        <ComboBox x:Name="NonAdminsComboBox" HorizontalAlignment="Left" Margin="10,161,0,-14" VerticalAlignment="Top" Width="120" DropDownOpened="NonAdminsComboBox_DropDownOpened"/>
        <Button x:Name="GrantTextAccess" Content="Предоставить" HorizontalAlignment="Left" Margin="10,82,0,0" VerticalAlignment="Top" Width="99" Click="GrantTextAccess_Click"/>
        <Button x:Name="GranrAdminStatus" Content="Предоставить" HorizontalAlignment="Left" Margin="10,199,0,-50" VerticalAlignment="Top" Width="99" Click="GranrAdminStatus_Click"/>
        <Button x:Name="RemoveTextAccessButton" Content="Лишить" HorizontalAlignment="Left" Margin="138,82,0,0" VerticalAlignment="Top" Width="75" Click="RemoveTextAccessButton_Click"/>
    </Grid>
</Window>
