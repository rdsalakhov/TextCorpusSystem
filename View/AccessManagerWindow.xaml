<Window x:Class="View.AccessManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="Управление аккаунтами" Height="262.76" Width="315.672" ResizeMode="CanMinimize">
    <Grid Height="169" VerticalAlignment="Top">
        <ComboBox x:Name="NonAdminTextComboBox" HorizontalAlignment="Left" Margin="10,38,0,0" VerticalAlignment="Top" Width="120" DropDownOpened="NonAdminTextComboBox_DropDownOpened"/>
        <ComboBox x:Name="TextsComboBox" HorizontalAlignment="Left" Margin="165,39,0,0" VerticalAlignment="Top" Width="120" DropDownOpened="TextsComboBox_DropDownOpened"/>
